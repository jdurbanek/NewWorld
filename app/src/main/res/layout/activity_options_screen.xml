<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="project.mobile.newworld.OptionsScreen">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/oBack"
        android:scaleType="centerCrop"
        />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true">

        <ImageButton
            style="?android:attr/buttonStyleSmall"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/settingsgear"
            android:id="@+id/settings"
            android:layout_gravity="end"
            android:layout_alignParentTop="true"
            android:adjustViewBounds="true"
            android:padding="20dp"
            android:scaleType="fitCenter"
            android:layout_alignParentEnd="true"
            android:layout_above="@+id/goOut" />

        <ImageButton
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:background="@drawable/base"
            android:id="@+id/goToBase"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            android:padding="15dp"
            android:scaleType= "fitCenter"
            android:onClick = "base"/>

        <ImageButton
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:background="@drawable/explore"
            android:id="@+id/goOut"
            android:layout_below="@+id/goToBase"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            android:padding="15dp"
            android:scaleType="fitCenter"
            android:onClick="out"/>

        <ImageButton
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:background="@drawable/battle"
            android:id="@+id/goBattle"
            android:layout_below="@+id/goOut"
            android:layout_alignStart="@+id/goOut"
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            android:padding="15dp"
            android:scaleType="fitCenter"
            android:onClick="battle"/>

    </LinearLayout>


</RelativeLayout>
