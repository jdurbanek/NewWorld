<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="project.mobile.newworld.Base">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/category"
            android:layout_gravity="center_vertical"
            android:text="category_specific" />

        <ProgressBar
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/progressBar" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Upgrade"
            android:id="@+id/upgradeButton"
            android:onClick="upgradeBase"/>

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="76dp"
            android:layout_height="35dp"
            android:text="Home"
            android:id="@+id/homeButton"
            android:onClick="launchHomeScreen"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Collect Materials"
            android:id="@+id/colMaterial"
            android:layout_gravity="center_horizontal"
            android:onClick="collectMaterials" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="test"
            android:id="@+id/button2"
            android:layout_gravity="center_horizontal"
            android:onClick="testResources"/>


    </LinearLayout>
</RelativeLayout>
