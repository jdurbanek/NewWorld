<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="project.mobile.newworld.Base">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView2" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/barracks"
           />

        <ImageView
            android:layout_width="77dp"
            android:layout_height="wrap_content"
            android:id="@+id/farm"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.17" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/wall"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.29" />



        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Upgrade"
            android:id="@+id/upgradeB"
            android:onClick="levelBarracks"
            android:layout_marginLeft="0dp"
            android:layout_gravity="center_horizontal"
            android:layout_below="@+id/upgradeMB"
            android:layout_alignEnd="@+id/button3" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Upgrade"
            android:id="@+id/upgradeF"
            android:onClick="levelFarm"
            android:layout_marginLeft="0dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="151dp" />



        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="76dp"
            android:layout_height="35dp"
            android:text="Home"
            android:id="@+id/homeButton"
            android:onClick="launchHomeScreen"
            android:layout_marginLeft="0dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Collect Wood"
            android:layout_gravity="center_horizontal"
            android:onClick="collectWood"
            android:layout_marginLeft="189dp"
            android:layout_below="@+id/homeButton"
            android:layout_alignParentStart="true"
            android:id="@+id/button3" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Collect Stone"
            android:layout_gravity="center_horizontal"
            android:onClick="collectStone"
            android:layout_marginLeft="189dp"
            android:layout_below="@+id/button3"
            android:layout_alignEnd="@+id/colMaterial" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Collect Metal"
            android:id="@+id/colMaterial"
            android:layout_gravity="center_horizontal"
            android:onClick="collectMetal"
            android:layout_above="@+id/upgradeB"
            android:layout_alignStart="@+id/button3" />



        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button2"
            android:text="test"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/upgradeB"
            android:onClick="testResources"/>


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GoMainBuilding"
            android:id="@+id/button4"
            android:layout_below="@+id/imageView2"
            android:layout_toStartOf="@+id/colMaterial"
            android:onClick="goToMainBuilding"/>

    </RelativeLayout>

</RelativeLayout>
