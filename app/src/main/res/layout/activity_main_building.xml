<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:padding = "1dp"

    tools:context="project.mobile.newworld.MainBuilding">

    <ImageView
        android:layout_width="98dp"
        android:layout_height="wrap_content"
        android:id="@+id/mainBuilding"
        android:layout_weight="0.29"
        android:layout_marginLeft="0dp"
        android:background="@drawable/wbdud1"
        android:layout_below="@+id/mbLevel"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/currMetal"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Upgrade"
        android:id="@+id/upgradeMB"
        android:onClick="levelMainBuilding"
        android:layout_marginLeft="0dp"
        android:layout_weight="6.50"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mb level"
        android:id="@+id/mbLevel"
        android:layout_marginTop="41dp"
        android:layout_below="@+id/currStone"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wood"
        android:id="@+id/currWood"
        android:layout_alignTop="@+id/currStone"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stone"
        android:id="@+id/currStone"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Metal"
        android:id="@+id/currMetal"
        android:layout_alignTop="@+id/currStone"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Collect Wood"
        android:layout_gravity="center_horizontal"
        android:onClick="collectWood"
        android:layout_marginLeft="189dp"
        android:id="@+id/button3"
        android:layout_below="@+id/currWood"
        android:layout_toStartOf="@+id/upgradeMB" />"
         />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Collect Stone"
        android:layout_gravity="center_horizontal"
        android:onClick="collectStone"
        android:layout_marginLeft="189dp"
        android:id="@+id/button5"
        android:layout_below="@+id/currStone"
        android:layout_centerHorizontal="true" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Collect Metal"
        android:id="@+id/colMaterial"
        android:layout_gravity="center_horizontal"
        android:onClick="collectMetal"
        android:layout_below="@+id/currMetal"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
